<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_topic"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="vu.group6.amsterquest.MainActivity">

    <TextView android:id="@+id/textView" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Hello World!" />

    <Button android:id="@+id/camera_button" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_below="@+id/textView"
        android:layout_marginLeft="60dp" android:layout_marginStart="60dp"
        android:layout_marginTop="54dp" android:text="Camera" />

    <ImageView android:id="@+id/loaded_image" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignEnd="@+id/camera_button"
        android:layout_alignRight="@+id/camera_button" android:layout_below="@+id/camera_button"
        android:layout_marginEnd="18dp" android:layout_marginRight="18dp"
        android:layout_marginTop="47dp" app:srcCompat="@android:drawable/presence_busy" />

    <Button android:id="@+id/map_button" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignTop="@+id/camera_button"
        android:layout_toEndOf="@+id/camera_button" android:layout_toRightOf="@+id/camera_button"
        android:text="Map" />
</RelativeLayout>
